# Development Mode Settings
# Set to "true" to enable specific features

# Server Configuration
VITE_SERVER_URL=http://localhost:9000

# UI Flow Control
VITE_START_DIRECTLY=false  # Skip preloader and go directly to next screen
VITE_SKIP_MENU=false       # Skip main menu and go directly to lobby/game
VITE_SKIP_LOBBY=false      # Skip lobby and go directly to game

# Direct Connection
# Set a lobby ID to connect directly to a specific lobby
VITE_DIRECT_CONNECT=

# Camera Settings
VITE_AUTO_SCROLL_CAMERA=true  # Enable automatic horizontal camera scrolling
VITE_CAMERA_SCROLL_SPEED=50    # Scrolling speed (pixels per second)

# Debug Options
VITE_DEBUG_MODE=false     # Enable debug information display

# Default Player Information
VITE_DEFAULT_PLAYER_NAME=Player_Dev
